# Server Configuration
NODE_ENV=production
PORT=5001
API_VERSION=v1

# MongoDB Configuration
MONGO_URI=mongodb://127.0.0.1:27017/eduGuideDB
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_secure_password
MONGO_AUTH_SOURCE=admin

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_STORAGE_BUCKET=your-secure-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Security Configuration
JWT_SECRET=your-very-long-and-secure-secret
JWT_EXPIRY=1h
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=application/pdf
MAX_FILES_PER_REQUEST=5

# Encryption Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
FILE_ENCRYPTION_KEY_LENGTH=32

# Content Security
CSP_DIRECTIVES=default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:;
XSS_PROTECTION=1; mode=block
FRAME_OPTIONS=DENY
HSTS_MAX_AGE=31536000

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Do not commit the actual .env file with real values to version control